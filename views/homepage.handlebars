<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="card m-3">
    <header class="card-header">
      <p class="card-header-title">
        {{#if ../logged_in}}
        <a href="/post/{{post.id}}">{{post.title}} </a>
        {{else}}
        <a href="/login">{{post.title}} </a>
        {{/if}}
      </p>
      <button class="card-header-icon" aria-label="more options">
        <span class="icon">
          <i class="fas fa-angle-down" aria-hidden="true"></i>
        </span>
      </button>
    </header>

    <div class="card-content">
       {{#if ../logged_in}}
      <div class="content">
        {{post.content}}
        
        <br>
        Posted by {{post.user.name}}
        <br>
        <time datetime="2016-1-1">{{format_date post.date_created}}</time>
      </div>
       {{else}}
      <div class="content"> Login to read this post </div>
      {{/if}}
    </div>

       

     {{#if ../logged_in}}
    <footer class="card-footer">
        {{!-- Added comments --}}
      {{#if post.comments.length}} 
     <div class="card-content">
      <p class="card-header-title">Comments:</p>
       {{#each post.comments as |comment|}}
      <div class="content">
        {{comment.content}}
        
        <br>
        Posted by {{comment.user.name}}
        <br>
        <time datetime="2016-1-1">{{format_date comment.date_created}}</time>
      </div>
      {{/each}}
    </div>
     {{/if}}
    </footer>
    {{else}}
    <footer class="card-footer"></footer>
    {{/if}}
</div>
{{/each}}

<script src="/js/home.js"></script>